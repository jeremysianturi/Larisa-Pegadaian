<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:id="@+id/container_toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/colorPrimary">
      <!--        android:background="#BB4B53">-->


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--
            put your activity content here
            You can change the layout to anything you want
            right now it is a linear layout
        -->
      </LinearLayout>

      <TextView
        android:fontFamily="@font/nexa_bold"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Account"
        android:textColor="#FFF"
        android:textSize="16sp" />

      <ImageView

        android:id="@+id/CreateNewCustomer"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        />
    </RelativeLayout>
  </LinearLayout>


  <LinearLayout
    android:layout_marginTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profile"/>

      <TextView
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profliname"
        android:text="M Zaim Milzam"/>
      <TextView
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileemail"
        android:text="zaimilzam@gmail.com"/>


    </LinearLayout>

    <LinearLayout
      android:layout_marginTop="10dp"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        tools:ignore="InefficientWeight">


        <LinearLayout
          android:paddingBottom="5dp"
          android:paddingTop="5dp"
          android:id="@+id/about"
          android:orientation="horizontal"
          android:weightSum="2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">


          <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
              android:fontFamily="@font/montserrat_semibold"
              android:paddingLeft="16dp"
              android:id="@+id/text1"
              android:text="About Marketplace"
              android:textSize="12sp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

          </LinearLayout>

          <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
              android:layout_gravity="center"
              card_view:srcCompat="@drawable/ic_arrow_right_24dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

          </LinearLayout>


        </LinearLayout>
      </androidx.cardview.widget.CardView>



      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        tools:ignore="InefficientWeight">

        <LinearLayout
          android:paddingTop="5dp"
          android:paddingBottom="5dp"
          android:id="@+id/moreinfo"
          android:orientation="horizontal"
          android:weightSum="2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">



          <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
              android:fontFamily="@font/montserrat_semibold"
              android:paddingLeft="16dp"
              android:id="@+id/text2"
              android:text="More Info"
              android:textSize="12sp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

          </LinearLayout>

          <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
              android:layout_gravity="center"
              card_view:srcCompat="@drawable/ic_arrow_right_24dp"
              android:layout_width="match_parent"
              android:layout_height="20dp"/>

          </LinearLayout>


        </LinearLayout>
      </androidx.cardview.widget.CardView>



      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        tools:ignore="InefficientWeight">

        <LinearLayout
          android:background="?android:attr/selectableItemBackground"
          android:id="@+id/share"
          android:paddingTop="5dp"
          android:paddingBottom="5dp"
          android:orientation="horizontal"
          android:weightSum="2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">


          <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
              android:fontFamily="@font/montserrat_semibold"
              android:paddingLeft="16dp"
              android:id="@+id/text3"
              android:text="Share"
              android:textSize="12sp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

          </LinearLayout>

          <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
              android:layout_gravity="center"
              card_view:srcCompat="@drawable/ic_arrow_right_24dp"
              android:layout_width="match_parent"
              android:layout_height="20dp"/>

          </LinearLayout>

        </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        tools:ignore="InefficientWeight">

        <LinearLayout
          android:id="@+id/notification"
          android:paddingTop="5dp"
          android:paddingBottom="5dp"
          android:orientation="horizontal"
          android:weightSum="2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">


          <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
              android:fontFamily="@font/montserrat_semibold"
              android:paddingLeft="16dp"
              android:id="@+id/text4"
              android:text="Notification Setting"
              android:textSize="12sp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

          </LinearLayout>

          <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
              android:layout_gravity="center"
              card_view:srcCompat="@drawable/ic_arrow_right_24dp"
              android:layout_width="match_parent"
              android:layout_height="20dp"/>

          </LinearLayout>

        </LinearLayout>
      </androidx.cardview.widget.CardView>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
          android:layout_marginTop="50dp"
          android:gravity="center_horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Version 1.0.0"/>
      </LinearLayout>


    </LinearLayout>


  </LinearLayout>

</LinearLayout>