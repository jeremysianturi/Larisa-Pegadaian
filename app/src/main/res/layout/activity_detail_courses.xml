<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/parent_view"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  tools:context=".controller.home.main_menu.mydevelopment.marketplace.DetailCourse.DetailCoursesActivity">

  <androidx.core.widget.NestedScrollView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/iv_content_background"
      android:layout_width="match_parent"
      android:scaleType="centerCrop"
      android:layout_height="300dp"
      android:src="@drawable/events"/>

    <RelativeLayout
      android:background="@drawable/button_transparent"
      android:layout_width="match_parent"
      android:layout_height="300dp">
    </RelativeLayout> <!--    tag background transparent-->

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:paddingTop="30dp">

      <TextView
        android:id="@+id/course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:text="Working with ACRYLIC PAINTS - Basics and Practice"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:maxLines="3"
        android:fontFamily="@font/nexa_bold"
        android:lineSpacingExtra="@dimen/line_spacing"
        />

      <TextView
        android:id="@+id/course_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:text="Working with ACRYLIC PAINTS - Basics and Practice"
        android:lineSpacingExtra="@dimen/line_spacing"
        android:fontFamily="@font/nexa_bold"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:maxLines="4"
        />

      <LinearLayout
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:layout_below="@id/course_description"
        android:id="@+id/item_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
          android:padding="5dp"
          android:background="@drawable/border_round_transparent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/ln_text1">

          <TextView
            android:paddingLeft="1dp"
            android:paddingStart="1dp"
            android:paddingRight="1dp"
            android:paddingEnd="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nexa_bold"
            android:text="BESTSELLER"/>

        </RelativeLayout>
        <RelativeLayout
          android:padding="2dp"
          android:layout_marginStart="10dp"
          android:layout_marginLeft="10dp"
          android:background="@drawable/border_round_transparent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/ln_text2">
          <ImageView
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:id="@+id/star"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/star"/>

          <TextView
            android:layout_toRightOf="@id/star"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nexa_bold"
            android:text="4.5"/>

        </RelativeLayout>
        <RelativeLayout
          android:padding="2dp"
          android:layout_marginStart="10dp"
          android:layout_marginLeft="10dp"
          android:background="@drawable/border_round_transparent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/ln_text3">

          <ImageView
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:id="@+id/enroll"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/star"/>
          <TextView
            android:layout_toRightOf="@id/enroll"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nexa_bold"
            android:text="278 enrolled"/>


        </RelativeLayout>

      </LinearLayout> <!-- tag bagde 1 -->
      <LinearLayout
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:layout_below="@id/item_category"
        android:id="@+id/item_category2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
          android:padding="2dp"
          android:paddingEnd="1dp"
          android:paddingRight="1dp"
          android:paddingStart="1dp"
          android:paddingLeft="1dp"
          android:background="@drawable/border_round_transparent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/ln_text4">

          <ImageView
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:id="@+id/star2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/star"/>


          <TextView
            android:layout_toRightOf="@id/star2"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nexa_bold"
            android:text="Partner Z"/>

        </RelativeLayout>
        <RelativeLayout
          android:padding="5dp"
          android:layout_marginStart="10dp"
          android:layout_marginLeft="10dp"
          android:background="@drawable/border_round_transparent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/ln_text5">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nexa_bold"
            android:text="Updated at 1/2020 "/>

        </RelativeLayout>
        <RelativeLayout
          android:padding="5dp"
          android:layout_marginStart="10dp"
          android:layout_marginLeft="10dp"
          android:background="@drawable/border_round_transparent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/ln_text6">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nexa_bold"
            android:text="16.5 Hours"/>

        </RelativeLayout>

      </LinearLayout> <!-- tag bagde 1 -->
      <RelativeLayout
        android:id="@+id/layout_image_content"
        android:paddingStart="60dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingEnd="60dp"
        android:paddingTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/item_category2">

        <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          card_view:cardCornerRadius="5dp"
          card_view:cardElevation="2dp"
          card_view:cardUseCompatPadding="true"
          tools:ignore="InefficientWeight">


        <ImageView
          android:scaleType="centerCrop"
          android:id="@+id/iv_content"
          android:layout_width="300dp"
          android:layout_height="140dp"
          android:src="@drawable/events"
          />
        </androidx.cardview.widget.CardView>


      </RelativeLayout> <!-- tag image banner -->

      <RelativeLayout
        android:id="@+id/layoout_detail_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/layout_image_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
          android:id="@+id/price_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
          android:layout_alignParentTop="true"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:id="@+id/price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Rp 250.000"
          android:textColor="@color/black"
          android:textSize="16sp"
          android:fontFamily="@font/nexa_bold"/>

        <TextView
          android:layout_alignParentTop="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:layout_marginEnd="16dp"
          android:layout_marginRight="16dp"
          android:id="@+id/points"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="5000 Pts"
          android:textColor="@color/black"
          android:textSize="16sp"
          android:fontFamily="@font/nexa_bold"/>

        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/button_buy"
          android:layout_marginTop="10dp"
          android:layout_marginStart="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginEnd="16dp"
          android:layout_below="@id/price_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="InefficientWeight">

            <LinearLayout
              android:background="?android:attr/selectableItemBackground"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buy Now "
                android:fontFamily="@font/nexa_bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:background="@color/red"/>
            </LinearLayout>

          </androidx.cardview.widget.CardView>

        </RelativeLayout>  <!-- tag buy -->


        <RelativeLayout
          android:id="@+id/add_chart"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:background="?android:attr/selectableItemBackground"
          android:layout_marginTop="10dp"
          android:layout_marginStart="16dp"
          android:layout_marginLeft="16dp"
          android:layout_below="@id/button_buy"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

          <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="InefficientWeight">

            <LinearLayout
              android:background="?android:attr/selectableItemBackground"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                android:id="@+id/tvadd_chart"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="add to cart"
                android:fontFamily="@font/nexa_bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                />
            </LinearLayout>

          </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <RelativeLayout
          android:layout_below="@id/button_buy"
          android:id="@+id/add_wishlist"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"

          android:layout_marginTop="10dp"
          android:layout_marginEnd="16dp"
          android:layout_marginRight="16dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

          <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="InefficientWeight">

            <LinearLayout
              android:background="?android:attr/selectableItemBackground"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                android:id="@+id/tvadd_wishlist"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="add to wishlist"
                android:fontFamily="@font/nexa_bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                />
            </LinearLayout>

          </androidx.cardview.widget.CardView>

        </RelativeLayout>  <!-- tag add to chart -->

        <RelativeLayout
          android:background="@drawable/border_round"
          android:layout_marginEnd="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="10dp"
          android:layout_below="@id/option_course"
          android:id="@+id/option_course2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <Spinner
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toLeftOf="@id/iv2"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_condition"/>
          <ImageView
            android:layout_marginEnd="10dp"
            android:id="@+id/iv2"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:src="@drawable/down"/>
        </RelativeLayout>

        <RelativeLayout
          android:background="@drawable/border_round"
          android:layout_marginEnd="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="10dp"
          android:layout_below="@id/add_wishlist"
          android:id="@+id/option_course"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <Spinner
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toLeftOf="@id/iv1"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_partner"/>
          <ImageView
            android:layout_marginEnd="10dp"
            android:id="@+id/iv1"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:src="@drawable/down"/>
        </RelativeLayout>

        <RelativeLayout
          android:layout_marginEnd="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="10dp"
          android:layout_below="@id/option_course2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/course_include_box">

          <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="InefficientWeight">

            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                android:textColor="@color/black"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:fontFamily="@font/nexa_bold"
                android:textSize="14sp"
                android:text="This Course Includes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tittle_box_1">

              </TextView>



              <RelativeLayout
                android:layout_below="@id/tittle_box_1"
                android:id="@+id/line_include_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                  android:layout_marginLeft="5dp"
                  android:layout_marginStart="5dp"
                  android:layout_margin="5dp"
                  app:srcCompat="@drawable/ic_featured"
                  android:id="@+id/iv_include_1"
                  android:layout_width="15dp"
                  android:layout_height="25dp"/>
              <TextView
                android:fontFamily="@font/nexa_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12sp"
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_include_1"
                android:text="All in (Training + Certification)"
                android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
              android:layout_below="@id/line_include_1"
              android:id="@+id/line_include_2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <ImageView
              android:layout_marginLeft="5dp"
              android:layout_marginStart="5dp"
              android:layout_margin="5dp"
              app:srcCompat="@drawable/ic_featured"
              android:id="@+id/iv_include_2"
              android:layout_width="15dp"
              android:layout_height="25dp"/>
              <TextView
                android:fontFamily="@font/nexa_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12sp"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_include_2"
                android:text="6 Modules"
                android:textSize="12sp" />
            </RelativeLayout>
            <RelativeLayout
              android:layout_below="@id/line_include_2"
              android:id="@+id/line_include_3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <ImageView
              android:layout_marginLeft="5dp"
              android:layout_marginStart="5dp"
              android:layout_margin="5dp"
              app:srcCompat="@drawable/ic_featured"
              android:id="@+id/iv_include_3"
              android:layout_width="15dp"
              android:layout_height="25dp"/>
              <TextView
                android:fontFamily="@font/nexa_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12sp"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_include_3"
                android:text="16.5 hours video course content"
                android:textSize="12sp" />
            </RelativeLayout>
            <RelativeLayout
              android:layout_below="@id/line_include_3"
              android:id="@+id/line_include_4"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <ImageView
              android:layout_marginLeft="5dp"
              android:layout_marginStart="5dp"
              android:layout_margin="5dp"
              app:srcCompat="@drawable/ic_featured"
              android:id="@+id/iv_include_4"
              android:layout_width="15dp"
              android:layout_height="25dp"/>
              <TextView
                android:fontFamily="@font/nexa_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12sp"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_include_4"
                android:text="Access on mobile and PC"
                android:textSize="12sp" />
            </RelativeLayout>

            </RelativeLayout>

          </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
          android:layout_marginEnd="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="10dp"
          android:layout_below="@id/course_include_box"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/course_include_box2">

          <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="InefficientWeight">

            <RelativeLayout
              android:paddingBottom="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                android:textColor="@color/black"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:fontFamily="@font/nexa_bold"
                android:textSize="14sp"
                android:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tittle_description">

              </TextView>

              <RelativeLayout
                android:paddingLeft="5dp"
                android:layout_below="@id/tittle_description"
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                  android:id="@+id/txt_description"
                  android:paddingTop="5dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:fontFamily="@font/nexa_bold"
                  android:paddingStart="5dp"
                  android:paddingLeft="5dp"
                  android:paddingEnd="5dp"
                  android:paddingRight="5dp"
                  android:lineSpacingExtra="5dp"/>


              </RelativeLayout>

            </RelativeLayout>

          </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
          android:layout_marginEnd="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="10dp"
          android:layout_below="@id/course_include_box2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/course_include_box3">

          <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="InefficientWeight">

            <RelativeLayout
              android:paddingBottom="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                android:textColor="@color/black"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
