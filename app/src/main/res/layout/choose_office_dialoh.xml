<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title_popupalert"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spinner_dialog12"
        >
    </TextView>

    <Spinner
        android:id="@+id/spinner_dialog12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_popupalert"
        app:layout_constraintBottom_toTopOf="@id/yes_button">
    </Spinner>

    <TextView
        android:id="@+id/yes_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Choose"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@color/green_pegadaian_color"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_dialog12">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>