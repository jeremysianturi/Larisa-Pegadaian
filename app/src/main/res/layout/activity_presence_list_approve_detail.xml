<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    tools:context=".controller.home.main_menu.presence.PresenceListApproveDetail"
    xmlns:card_view="http://schemas.android.com/tools">



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title_detail_presenceconf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Detail Presence Confirmation"
        android:layout_marginHorizontal="4dp"
        android:paddingVertical="12dp"
        android:gravity="start"
        android:textStyle="bold"
        android:background="@drawable/bottom_border_gray_simple"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_nik_presence_detail"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <LinearLayout
        android:id="@+id/ll_nik_presence_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_status_presence_detail"
        app:layout_constraintTop_toBottomOf="@id/tv_title_detail_presenceconf">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIK"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/nik_detail_presence_approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:paddingVertical="8dp"
            android:background="@drawable/border_rectangle">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_status_presence_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_tgl_presence_detail"
        app:layout_constraintTop_toBottomOf="@id/ll_nik_presence_detail">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/status_detail_presence_approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:paddingVertical="8dp"
            android:background="@drawable/border_rectangle">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_tgl_presence_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_jeniskonf_presence_detail"
        app:layout_constraintTop_toBottomOf="@id/ll_status_presence_detail">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/tanggal_detail_presence_approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:paddingVertical="8dp"
            android:background="@drawable/border_rectangle">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_jeniskonf_presence_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_deskripsi_presence_detail"
        app:layout_constraintTop_toBottomOf="@id/ll_tgl_presence_detail">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Konfirmasi"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/jeniskonf_detail_presence_approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:paddingVertical="8dp"
            android:background="@drawable/border_rectangle">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_deskripsi_presence_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_file_presence_detail"
        app:layout_constraintTop_toBottomOf="@id/ll_jeniskonf_presence_detail">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Deskripsi"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/deskripsi_detail_presence_approval"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="description"
            android:paddingHorizontal="4dp"
            android:paddingVertical="8dp"
            android:background="@drawable/border_rectangle">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_file_presence_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_margin="4dp"
        android:background="@drawable/border_rectangle"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_btn_presenceconf_detail"
        app:layout_constraintTop_toBottomOf="@id/ll_deskripsi_presence_detail">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold">
        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            card_view:ignore="DuplicateIds">

            <ImageView
                android:id="@+id/file_detail_presence_approval_nik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder_gallery">
            </ImageView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn_presenceconf_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="15dp"
        android:layout_margin="4dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_reject_presenceconf_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:layout_weight="0.5"
            android:background="@drawable/button_red"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/btn_approve_presenceconf_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Approve"
            android:layout_weight="0.5"
            android:background="@drawable/mybutton"
            android:textColor="@color/white">
        </Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
