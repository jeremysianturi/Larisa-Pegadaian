    <TextView
        android:id="@+id/tv_title_datatype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose your data type"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_margin="14dp"
        android:padding="4dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spinner_datatype">
    </TextView>

    <Spinner
        android:id="@+id/spinner_datatype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_margin="14dp"
        android:padding="4dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_datatype"
        app:layout_constraintBottom_toTopOf="@id/tv_title_data">
    </Spinner>

    <TextView
        android:id="@+id/tv_title_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipe Alat Komunikasi"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_margin="14dp"
        android:padding="4dp"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_datatype"
        app:layout_constraintBottom_toTopOf="@id/spinner_data">
    </TextView>

    <Spinner
        android:id="@+id/spinner_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_margin="14dp"
        android:padding="4dp"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_data"
        app:layout_constraintBottom_toTopOf="@id/tv_title_et1">
    </Spinner>

    <TextView
        android:id="@+id/tv_title_et1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="et1"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_margin="14dp"
        android:padding="4dp"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_data"
        app:layout_constraintBottom_toTopOf="@id/et1">
    </TextView>

    <EditText
        android:id="@+id/et1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_margin="14dp"
        android:background="@drawable/button_white"
        android:padding="4dp"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_et1"
        app:layout_constraintBottom_toTopOf="@id/tv_title_et2">
    </EditText>

    <TextView
        android:id="@+id/tv_title_et2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="et2"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_margin="14dp"
        android:padding="4dp"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et1"
        app:layout_constraintBottom_toTopOf="@id/et2">
    </TextView>

    <EditText
        android:id="@+id/et2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_margin="14dp"
        android:background="@drawable/button_white"
        android:padding="4dp"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_et2"
        app:layout_constraintBottom_toTopOf="@id/linear_for_identification">
    </EditText>

    <LinearLayout
        android:id="@+id/linear_for_identification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et2"
        app:layout_constraintBottom_toTopOf="@id/btn_submit_addData">

        <LinearLayout
            android:id="@+id/linear_left_identification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_title_dateissue_identification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Issued"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_margin="14dp"
                android:padding="4dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et1"
                app:layout_constraintBottom_toTopOf="@id/et2">
            </TextView>

            <TextView
                android:id="@+id/tv_dateissue_identification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_margin="14dp"
                android:background="@drawable/button_white"
                android:padding="4dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_et2"
                app:layout_constraintBottom_toTopOf="@id/linear_for_identification">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_right_identification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_title_expiredate_identification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expire Date"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_margin="14dp"
                android:padding="4dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et1"
                app:layout_constraintBottom_toTopOf="@id/et2">
            </TextView>

            <TextView
                android:id="@+id/tv_expiredate_identification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_margin="14dp"
                android:background="@drawable/button_white"
                android:padding="4dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_et2"
                app:layout_constraintBottom_toTopOf="@id/linear_for_identification">
            </TextView>
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_addData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/button"
        android:layout_margin="14dp"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_for_identification">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>