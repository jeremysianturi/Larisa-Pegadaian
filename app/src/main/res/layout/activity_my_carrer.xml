<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.home.main_menu.mydevelopment.mycareer.MyCarrerActivity">

    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        ========== Layout 1 ========   -->

      <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    tools:ignore="InefficientWeight">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginBottom="8dp"
            android:id="@+id/career_profile"
            android:src="@drawable/profile"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

          <TextView
            android:id="@+id/career_name"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:text="BASUKI Sholeh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

<!--          <TextView-->
<!--            android:id="@+id/career_nik"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:textSize="14sp"-->
<!--            android:gravity="center_horizontal"-->
<!--            android:text="123123123"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->
<!--          <TextView-->
<!--            android:id="@+id/career_job"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:textSize="14sp"-->
<!--            android:gravity="center_horizontal"-->
<!--            android:text="Human Capital"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->

          <TextView
            android:id="@+id/jabatan"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:text="jabatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

          <TextView
            android:id="@+id/band"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="band"
            android:textSize="14sp" />

<!--          <TextView-->
<!--            android:id="@+id/company_name"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:textSize="14sp"-->
<!--            android:gravity="center_horizontal"-->
<!--            android:text="PT. Pelindo 1"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->
          <TextView
            android:id="@+id/career_company_place"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:text="Kantor Pusat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

          <TextView
            android:id="@+id/tv_5"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </LinearLayout>
  </androidx.cardview.widget.CardView>
      </LinearLayout>



      <!--        ========== Layout 2 ========   -->
        <LinearLayout
          android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="InefficientWeight">


          <LinearLayout
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/layout_ecp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
              android:padding="7dp"
              android:text="Employee Career Plan (ECP)"
              android:textSize="@dimen/text_career"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

          </LinearLayout>
          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="InefficientWeight">
          <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:id="@+id/layout_mcp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
              android:padding="7dp"
              android:text="Management Career Plan (MCP)"
              android:textSize="@dimen/text_career"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

          </LinearLayout>
          </androidx.cardview.widget.CardView>


          <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="InefficientWeight">
          <LinearLayout
            android:padding="7dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:id="@+id/layout_scp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
              android:padding="10dp"
              android:text="Succession Career Plan (SCP)"
              android:textSize="@dimen/text_career"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>


          </LinearLayout>
          </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>