<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/cl_add_personaldata"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.home.main_menu.personal_data.add_data.AddPersonalDataActivityKt">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_datatype"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Choose your data type"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_margin="14dp"
            android:padding="4dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/spinner_datatype_newlayout">
        </TextView>

        <TextView
            android:id="@+id/spinner_datatype_newlayout"
            style="@style/textview_dropdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_margin="14dp"
            android:padding="4dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_datatype"
            app:layout_constraintBottom_toTopOf="@id/tv_title_data">
        </TextView>

        <TextView
            android:id="@+id/tv_title_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tipe Alat Komunikasi"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_margin="14dp"
            android:padding="4dp"
            android:visibility="gone"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_datatype_newlayout"
            app:layout_constraintBottom_toTopOf="@id/spinner_data_newlayout">
        </TextView>

        <TextView
            android:id="@+id/spinner_data_newlayout"
            style="@style/textview_dropdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_margin="14dp"
            android:padding="4dp"
            android:visibility="gone"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_data"
            app:layout_constraintBottom_toTopOf="@id/tv_title_et1">
        </TextView>

        <TextView
            android:id="@+id/tv_title_et1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="et1"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_margin="14dp"
            android:padding="4dp"
            android:visibility="gone"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_data_newlayout"
            app:layout_constraintBottom_toTopOf="@id/et1_newlayout">
        </TextView>

        <EditText
            android:id="@+id/et1_newlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_margin="14dp"
            android:background="@drawable/button_white"
            android:padding="4dp"
            android:visibility="gone"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_et1"
            app:layout_constraintBottom_toTopOf="@id/tv_title_et2">
        </EditText>

        <TextView
            android:id="@+id/tv_title_et2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="et2"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_margin="14dp"
            android:padding="4dp"
            android:visibility="gone"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et1_newlayout"
            app:layout_constraintBottom_toTopOf="@id/et2_newlayout">
        </TextView>

        <EditText
            android:id="@+id/et2_newlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_margin="14dp"
            android:background="@drawable/button_white"
            android:padding="4dp"
            android:visibility="gone"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_et2"
            app:layout_constraintBottom_toTopOf="@id/linear_for_identification">
        </EditText>

        <LinearLayout
            android:id="@+id/linear_for_identification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et2_newlayout"
            app:layout_constraintBottom_toTopOf="@id/btn_submit_addData_newlayout">

            <LinearLayout
                android:id="@+id/linear_left_identification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_title_dateissue_identification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date Issued"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et1"
                    app:layout_constraintBottom_toTopOf="@id/et2">
                </TextView>

                <TextView
                    android:id="@+id/tv_dateissue_identification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:background="@drawable/button_white"
                    android:padding="4dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_et2"
                    app:layout_constraintBottom_toTopOf="@id/linear_for_identification">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_right_identification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_title_expiredate_identification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expire Date"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et1"
                    app:layout_constraintBottom_toTopOf="@id/et2">
                </TextView>

                <TextView
                    android:id="@+id/tv_expiredate_identification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:background="@drawable/button_white"
                    android:padding="4dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_et2"
                    app:layout_constraintBottom_toTopOf="@id/linear_for_identification">
                </TextView>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_for_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_datatype_newlayout"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_title_addresstype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose your address type"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_margin="14dp"
                android:padding="4dp">
            </TextView>

            <TextView
                android:id="@+id/spinner_addresstype_newlayout"
                style="@style/textview_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_margin="14dp"
                android:padding="4dp">
            </TextView>

            <TextView
                android:id="@+id/tv_title_province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose your province"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_margin="14dp"
                android:padding="4dp">
            </TextView>

            <TextView
                android:id="@+id/spinner_province_newlayout"
                style="@style/textview_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_margin="14dp"
                android:padding="4dp">
            </TextView>

            <LinearLayout
                android:id="@+id/ll_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_title_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose your city"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>

                <TextView
                    android:id="@+id/spinner_city_newlayout"
                    style="@style/textview_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_title_distric"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose your district"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>

                <TextView
                    android:id="@+id/spinner_district_newlayout"
                    style="@style/textview_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_edittext_dan_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_addressnum_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address order"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>

                <EditText
                    android:id="@+id/spinner_addressnum_newlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:background="@drawable/button_white"
                    android:layout_margin="14dp"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="4dp"
                    android:hint="Address order number (Urutan alamat)">
                </EditText>


                <TextView
                    android:id="@+id/tv_title_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fill your street name"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>

                <EditText
                    android:id="@+id/spinner_street_newlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:background="@drawable/button_white"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </EditText>


                <TextView
                    android:id="@+id/tv_postalcode_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fill your postal code"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>

                <EditText
                    android:id="@+id/spinner_postalcode_newlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:background="@drawable/button_white"
                    android:inputType="number"
                    android:maxLength="5"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </EditText>


                <Button
                    android:id="@+id/btn_submit_address_newlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_margin="14dp">
                </Button>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_for_education"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_datatype_newlayout"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/ll_education_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_education_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select your education level"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>

                <TextView
                    android:id="@+id/spinner_education_level"
                    style="@style/textview_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_institution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill your institution"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_margin="14dp"
                android:padding="4dp">
            </TextView>

            <EditText
                android:id="@+id/et_intitution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@drawable/button_white"
                android:layout_margin="14dp"
                android:padding="4dp">
            </EditText>

            <LinearLayout
                android:id="@+id/ll_faculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_faculty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select your faculty"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>

                <TextView
                    android:id="@+id/spinner_faculty"
                    style="@style/textview_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select your major"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>

                <TextView
                    android:id="@+id/spinner_major"
                    style="@style/textview_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_submajor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill your submajor"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_margin="14dp"
                android:padding="4dp">
            </TextView>

            <EditText
                android:id="@+id/et_submajor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@drawable/button_white"
                android:layout_margin="14dp"
                android:padding="4dp">
            </EditText>

            <LinearLayout
                android:id="@+id/linear_for_education_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_education_startdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_title_education_startdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Education start date"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_margin="14dp"
                        android:padding="4dp">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_education_startdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_margin="14dp"
                        android:background="@drawable/button_white"
                        android:padding="4dp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_education_enddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_title_education_enddate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Education end date"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_margin="14dp"
                        android:padding="4dp">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_education_enddate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_margin="14dp"
                        android:background="@drawable/button_white"
                        android:padding="4dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_academic_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill your academic score"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_margin="14dp"
                android:padding="4dp">
            </TextView>

            <EditText
                android:id="@+id/et_academic_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@drawable/button_white"
                android:layout_margin="14dp"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:padding="4dp">
            </EditText>


            <Button
                android:id="@+id/btn_submit_education_newlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/button"
                android:layout_margin="14dp">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_for_insurance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_datatype_newlayout"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/ll_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_insurance_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="insurance type"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>

                <TextView
                    android:id="@+id/spinner_insurance_type"
                    style="@style/textview_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_margin="14dp"
                    android:padding="4dp">
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_insurance_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insurance Company"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_margin="14dp"
                android:padding="4dp">
            </TextView>

            <EditText
                android:id="@+id/et_insurance_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@drawable/button_white"
                android:layout_margin="14dp"
                android:padding="4dp">
            </EditText>

            <TextView
                android:id="@+id/tv_title_insurance_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insurance Number/Value"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_margin="14dp"
                android:padding="4dp">
            </TextView>

            <EditText
                android:id="@+id/et_insurance_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@drawable/button_white"
                android:layout_margin="14dp"
                android:inputType="number"
                android:padding="4dp">
            </EditText>

            <LinearLayout
                android:id="@+id/linear_for_insurance_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_insurance_startdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_title_insurance_startdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date Issued"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_margin="14dp"
                        android:padding="4dp">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_insurance_startdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_margin="14dp"
                        android:background="@drawable/button_white"
                        android:padding="4dp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_insurance_enddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

